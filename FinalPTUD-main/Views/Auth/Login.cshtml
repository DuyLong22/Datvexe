@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Đăng nhập</h3>
@if (TempData["Error"] != null) { <div class="alert alert-danger">@TempData["Error"]</div> }
<form method="post">
    <div class="mb-3"><label class="form-label">Email</label><input class="form-control" type="email" name="email" required /></div>
    <div class="mb-3"><label class="form-label">Mật khẩu</label><input class="form-control" type="password" name="password" required /></div>
    <button class="btn btn-primary">Đăng nhập</button>
    <a class="btn btn-link" href="/Auth/Register">Đăng ký</a>
</form>

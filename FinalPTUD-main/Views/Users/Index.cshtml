@model IEnumerable<BusTicketBooking.Models.User>
@{
    ViewData["Title"] = "Người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Người dùng</h3>
    <form method="get" class="d-flex gap-2">
        <input class="form-control" type="text" name="q" placeholder="Tìm tên/email" value="@Context.Request.Query["q"]" />
        <button class="btn btn-outline-primary">Tìm</button>
    </form>
</div>
<table class="table table-striped">
    <thead><tr><th>ID</th><th>Tên</th><th>Email</th><th>Quyền</th><th>Phone</th><th></th></tr></thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.UserId</td>
            <td>@u.Name</td>
            <td>@u.Email</td>
            <td>@u.Role</td>
            <td>@u.Phone</td>
            <td>
                <a class="btn btn-sm btn-warning" href="/Users/Edit/@u.UserId">Sửa</a>
                <a class="btn btn-sm btn-danger" href="/Users/Delete/@u.UserId">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>

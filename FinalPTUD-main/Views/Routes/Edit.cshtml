@model BusTicketBooking.Models.Route
@{
    ViewData["Title"] = "Sửa tuyến đường";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Sửa tuyến đường</h3>
<form method="post">
    <div class="mb-3">
        <label class="form-label">Điểm đi</label>
        <select class="form-select" asp-for="DepartureCityId" asp-items="@(new SelectList(ViewBag.Cities, "CityId", "CityName", Model.DepartureCityId))">
            <option value="">-- Chọn thành phố --</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Điểm đến</label>
        <select class="form-select" asp-for="DestinationCityId" asp-items="@(new SelectList(ViewBag.Cities, "CityId", "CityName", Model.DestinationCityId))">
            <option value="">-- Chọn thành phố --</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Khoảng cách (km)</label>
        <input class="form-control" asp-for="Distance" type="number" step="0.1" />
    </div>
    <button class="btn btn-primary">Lưu</button>
    <a href="/Routes" class="btn btn-secondary">Hủy</a>
</form>

@model IEnumerable<BusTicketBooking.Models.Trip>
@{
    ViewData["Title"] = "Chuyến xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Chuyến xe</h3>
    <a class="btn btn-primary" href="/Trips/Create">Thêm</a>
</div>
<table class="table table-striped">
    <thead><tr><th>ID</th><th>Tuyến</th><th>Tên xe</th><th>Khởi hành</th><th>Đến nơi</th><th>Giá</th><th></th></tr></thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.TripId</td>
            <td>@t.Route!.DepartureCity?.CityName → @t.Route!.DestinationCity?.CityName</td>
            <td>@t.BusName</td>
            <td>@t.DepartureTime</td>
            <td>@t.ArrivalTime</td>
            <td>@t.Price.ToString("n0")</td>
            <td>
                <a class="btn btn-sm btn-warning" href="/Trips/Edit/@t.TripId">Sửa</a>
                <a class="btn btn-sm btn-danger" href="/Trips/Delete/@t.TripId">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
